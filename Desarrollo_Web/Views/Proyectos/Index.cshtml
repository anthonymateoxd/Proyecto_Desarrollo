@model IEnumerable<DemonSlayer.Models.Proyecto>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Proyectos";
    var userRole = User.IsInRole("Admin") ? "Admin"
                 : User.IsInRole("Cliente") ? "Cliente"
                 : User.IsInRole("Consultor") ? "Consultor"
                 : "";
}

@{
    int userId = 0;
    int.TryParse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value, out userId);
}

<div class="container mt-4">
    <h1 class="mb-3">Proyectos</h1>

    @* Solo Cliente y Admin pueden crear *@
    @if (userRole == "Cliente" || userRole == "Admin")
    {
        <p>
            <a class="btn btn-primary" asp-action="Create">+ Crear nuevo proyecto</a>
        </p>
    }

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.PresupuestoQ)</th>
                <th>@Html.DisplayNameFor(model => model.FechaLimite)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th>@Html.DisplayNameFor(model => model.ClienteId)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.Descripcion</td>
                    <td>Q @item.PresupuestoQ</td>
                    <td>@item.FechaLimite.ToShortDateString()</td>
                    <td>@item.Estado</td>
                    <td>@item.ClienteId</td>
                    <td>
                        @* Todos pueden ver detalles *@
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a>

                        @* Solo Cliente dueño o Admin puede editar/eliminar *@
                        @if ((userRole == "Cliente" && item.ClienteId == userId) || userRole == "Admin")
                        {
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>

                            <!-- NUEVO BOTÓN: Ver Propuestas -->
                            <a asp-controller="Postulaciones" asp-action="PropuestasPorProyecto"
                               asp-route-proyectoId="@item.Id" class="btn btn-info btn-sm">
                                Ver Propuestas
                            </a>
                        }

                        @* Solo Consultor puede postularse a proyectos *@
                        @if (userRole == "Consultor")
                        {
                            <a asp-controller="Postulaciones" asp-action="Create" asp-route-proyectoId="@item.Id"
                               class="btn btn-primary btn-sm">
                                Postularse
                            </a>
                        }

                        
                    </td> <!-- CIERRE CORRECTO de la celda td -->
                </tr>
            }
        </tbody>
    </table>
</div>

@functions {
    // Función MUY SIMPLE - Mostrar botón a todos los usuarios logueados
    private bool PuedeEnviarMensaje(int proyectoId, int userId, string userRole)
    {
        // Cualquier usuario logueado puede ver el botón
        // La verificación real se hace en el controlador Mensajes/PorProyecto
        return userId > 0; // Si tiene userId, está logueado
    }
}