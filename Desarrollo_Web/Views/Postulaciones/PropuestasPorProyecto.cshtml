@model IEnumerable<DemonSlayer.Models.Postulacion>

@{
    ViewData["Title"] = "Propuestas del Proyecto";
}

<h1>Propuestas para: @ViewData["ProyectoTitulo"]</h1>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Consultor ID</th>
                    <th>Monto Propuesto</th>
                    <th>Propuesta</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>Consultor #@item.ConsultorId</td>
                        <td>Q @item.MontoQ.ToString("N2")</td>
                        <td>
                            @{
                                var propuesta = item.Propuesta ?? "";
                                var propuestaCorta = propuesta.Length > 50 ? propuesta.Substring(0, 50) + "..." : propuesta;
                            }
                            <span title="@propuesta">@propuestaCorta</span>
                        </td>
                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.Aceptada)
                            {
                                <span class="badge bg-success">Aceptada</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Pendiente</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver Detalles</a>

                            @if (!item.Aceptada)
                            {
                                <form asp-action="AceptarPropuesta" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-success btn-sm">Aceptar</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <h4>No hay propuestas aún</h4>
        <p>Este proyecto no tiene postulaciones por el momento.</p>
    </div>
}

<div class="mt-3">
    <a asp-controller="Proyectos" asp-action="Index" class="btn btn-secondary">Volver a Proyectos</a>
</div>