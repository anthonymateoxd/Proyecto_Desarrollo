@model DemonSlayer.Models.Postulacion

@{
    ViewData["Title"] = "Aceptar Propuesta";
}

<h1>✅ Aceptar Propuesta</h1>

<h3>¿Estás seguro de que quieres aceptar esta propuesta?</h3>
<div>
    <h4>Propuesta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Monto:</dt>
        <dd class="col-sm-10">Q @Model.MontoQ</dd>
        
        <dt class="col-sm-2">Propuesta:</dt>
        <dd class="col-sm-10">@Model.Propuesta</dd>
        
        <dt class="col-sm-2">Consultor:</dt>
        <dd class="col-sm-10">@Model.ConsultorId</dd>
    </dl>
    
    <form asp-action="AceptarPropuesta">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="✅ Sí, Aceptar Propuesta" class="btn btn-success" /> 
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancelar</a>
    </form>
</div>