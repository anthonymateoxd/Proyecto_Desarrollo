@model DemonSlayer.Models.Mensaje

@{
    ViewData["Title"] = "Crear Mensaje";
}

<h1>Crear Mensaje</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo oculto para ProyectoId si viene de un proyecto -->
            @if (ViewBag.ProyectoId != null)
            {
                <input type="hidden" asp-for="ProyectoId" value="@ViewBag.ProyectoId" />
                <div class="alert alert-info">
                    Mensaje para el proyecto ID: @ViewBag.ProyectoId
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="ProyectoId" class="control-label">ID del Proyecto</label>
                    <input asp-for="ProyectoId" class="form-control" />
                    <span asp-validation-for="ProyectoId" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <label asp-for="Texto" class="control-label">Mensaje</label>
                <textarea asp-for="Texto" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Enviar Mensaje" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>