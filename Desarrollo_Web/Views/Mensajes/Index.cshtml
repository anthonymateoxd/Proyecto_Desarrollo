@model IEnumerable<DemonSlayer.Models.Mensaje>

@{
    ViewData["Title"] = "Mis Mensajes";
}

<h1>💬 Mis Mensajes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Mensaje</a>
</p>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Proyecto</th>
                    <th>Mensaje</th>
                    <th>Fecha</th>
                    <th>Remitente</th>
                    <th>Tipo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var esMio = item.RemitenteId == ViewBag.UserId;

                    // Obtener nombre del remitente de manera segura
                    string nombreRemitente;
                    if (ViewBag.Usuarios != null && ViewBag.Usuarios.ContainsKey(item.RemitenteId))
                    {
                        nombreRemitente = ViewBag.Usuarios[item.RemitenteId];
                    }
                    else
                    {
                        nombreRemitente = $"Usuario #{item.RemitenteId}";
                    }

                    // Obtener título del proyecto de manera segura
                    string tituloProyecto;
                    if (ViewBag.Proyectos != null && ViewBag.Proyectos.ContainsKey(item.ProyectoId))
                    {
                        tituloProyecto = ViewBag.Proyectos[item.ProyectoId];
                    }
                    else
                    {
                        tituloProyecto = $"Proyecto #{item.ProyectoId}";
                    }

                    <tr>
                        <td>
                            <strong>@tituloProyecto</strong>
                        </td>
                        <td>
                            @{
                                var texto = item.Texto ?? "";
                                var textoCorto = texto.Length > 50 ? texto.Substring(0, 50) + "..." : texto;
                            }
                            <span title="@item.Texto">@textoCorto</span>
                        </td>
                        <td>
                            <small>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
                        </td>
                        <td>
                            @if (esMio)
                            {
                                <span class="badge bg-primary">Tú</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@nombreRemitente</span>
                            }
                        </td>
                        <td>
                            @if (esMio)
                            {
                                <span class="badge bg-outline-primary">📤 Enviado</span>
                            }
                            else
                            {
                                <span class="badge bg-success">📥 Recibido</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">👀 Ver</a>

                            @if (esMio)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                            }
                            else
                            {
                                <a asp-controller="Mensajes" asp-action="Create" asp-route-proyectoId="@item.ProyectoId"
                                   class="btn btn-success btn-sm">💬 Responder</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <h4>No hay mensajes</h4>
        <p>No tienes mensajes para mostrar.</p>
        <a asp-action="Create" class="btn btn-primary">Crear Primer Mensaje</a>
    </div>
}