@model DemonSlayer.ViewModels.UsuarioVM;
@{
    Layout = null;
}

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrarse - FreelancerHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        :root {
            --primary-color: #2563eb;
            --primary-dark: #1d4ed8;
            --secondary-color: #6b7280;
            --light-bg: #f8fafc;
            --border-color: #e5e7eb;
        }

        body {
            background-color: var(--light-bg);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            overflow: hidden;
        }

        .card-header {
            background-color: var(--primary-color);
            color: white;
            font-weight: 600;
            text-align: center;
            padding: 1.25rem;
            border-bottom: none;
            font-size: 1.25rem;
        }

        .card-body {
            padding: 2rem;
        }

        .form-control {
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 0.75rem 1rem;
            transition: all 0.2s;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

        .form-label {
            color: var(--secondary-color);
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            border-radius: 8px;
            padding: 0.75rem;
            font-weight: 600;
            transition: background-color 0.2s;
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
            }

        .alert {
            border-radius: 8px;
            border: none;
        }

        a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
        }

            a:hover {
                color: var(--primary-dark);
                text-decoration: underline;
            }

        .logo-container {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .logo {
            color: var(--primary-color);
            font-weight: 700;
            font-size: 1.75rem;
            letter-spacing: -0.5px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-5 col-lg-4">
                <div class="logo-container">
                    <div class="logo">FreelancerHub</div>
                </div>
                <div class="card">
                    <div class="card-header">
                        Crear cuenta
                    </div>
                    <div class="card-body">
                        <form asp-controller="Accesso" asp-action="Registrarse" method="post">
                            <div class="form-group">
                                <input class="form-control"
                                       type="text"
                                       placeholder="Nombre Completo"
                                       required
                                       asp-for="NombreCompleto" />
                            </div>

                            <div class="form-group">
                                <input class="form-control"
                                       type="email"
                                       placeholder="Correo electrónico"
                                       required
                                       asp-for="Correo" />
                            </div>

                            <div class="form-group">
                                <input class="form-control"
                                       type="password"
                                       placeholder="Contraseña"
                                       required
                                       asp-for="Clave" />
                            </div>

                            <div class="form-group">
                                <input class="form-control"
                                       type="password"
                                       placeholder="Confirmar Contraseña"
                                       required
                                       asp-for="ConfirmarClave" />
                            </div>

                            <!-- Campo para seleccionar el tipo de usuario -->
                            <div class="form-group">
                                <label asp-for="Rol" class="form-label">¿Qué tipo de usuario eres?</label>
                                <select asp-for="Rol" class="form-control">
                                    <option value="">Seleccionar...</option>
                                    <option value="Cliente">Cliente - Publicar proyectos</option>
                                    <option value="Consultor">Consultor - Aplicar a proyectos</option>
                                </select>
                                <span asp-validation-for="Rol" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Crear cuenta</button>
                            </div>

                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            }

                            <div class="text-center mt-3">
                                ¿Ya tienes una cuenta? <a asp-controller="Accesso" asp-action="Login">Iniciar Sesión</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>