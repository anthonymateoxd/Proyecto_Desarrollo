@model DemonSlayer.ViewModels.UsuarioVM;
@{
    Layout = null;
}

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    Registrate
                </div>
                <div class="card-body">
                    <form asp-controller="Accesso" asp-action="Registrarse" method="post">
                        <input class="form-control mb-3"
                               type="text"
                               placeholder="Nombre Completo"
                               required
                               asp-for="NombreCompleto" />

                        <input class="form-control mb-3"
                               type="email"
                               placeholder="Correo"
                               required
                               asp-for="Correo" />

                        <input class="form-control mb-3"
                               type="password"
                               placeholder="Contraseña"
                               required
                               asp-for="Clave" />

                        <input class="form-control mb-3"
                               type="password"
                               placeholder="Confirmar Contraseña"
                               required
                               asp-for="ConfirmarClave" />

                        <!-- Campo para seleccionar el tipo de usuario -->
                        <div class="form-group">
                            <label asp-for="Rol" class="form-label">¿Qué tipo de usuario eres?</label>
                            <select asp-for="Rol" class="form-control">
                                <option value="">Seleccionar...</option>
                                <option value="Cliente">Cliente - Publicar proyectos</option>
                                <option value="Consultor">Consultor - Aplicar a proyectos</option>
                            </select>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Registrate</button>
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                        ¿Ya tienes una cuenta? <a asp-controller="Accesso" asp-action="Login">Iniciar Sesion</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
