@using System.Security.Claims;
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section"
     style="background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
            color: #1a202c;
            padding: 140px 0;
            margin-bottom: 100px;
            font-family: 'Inter', 'Segoe UI', sans-serif;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 text-center text-lg-start">
                <h1 class="display-4 fw-bold mb-5" style="font-family: 'Inter', sans-serif; letter-spacing: -0.02em;">
                    FreelancerHub
                </h1>
                <p class="lead mb-4" style="font-size: 1.3rem; color: #4a5568; line-height: 1.6;">
                    Conectamos talento excepcional con oportunidades extraordinarias
                </p>
                <p class="mb-5" style="font-size: 1.05rem; color: #718096; line-height: 1.6;">
                    La plataforma líder para freelancers de elite y clientes que buscan calidad
                </p>

                @if (!User.Identity!.IsAuthenticated)
                {
                    <div class="hero-buttons">
                        <a asp-controller="Accesso" asp-action="Registrarse"
                           class="btn btn-lg me-3 px-5 py-3 fw-semibold"
                           style="background-color: #48bb78; border: none; color: white; border-radius: 8px;">
                            Comenzar Ahora
                        </a>
                        <a asp-controller="Accesso" asp-action="Login"
                           class="btn btn-outline-secondary btn-lg px-5 py-3"
                           style="border-radius: 8px; border-color: #e2e8f0;">
                            Iniciar Sesión
                        </a>
                    </div>
                }
            </div>

            <div class="col-lg-6 mt-5 mt-lg-0">
                <!-- Carrusel de Imágenes -->
                <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner rounded-3 shadow-lg" style="overflow: hidden;">
                        <div class="carousel-item active">
                            <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80"
                                 class="d-block w-100" alt="Trabajo en equipo" style="height: 420px; object-fit: cover;">
                        </div>
                        <div class="carousel-item">
                            <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80"
                                 class="d-block w-100" alt="Reunión de trabajo" style="height: 420px; object-fit: cover;">
                        </div>
                        <div class="carousel-item">
                            <img src="https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80"
                                 class="d-block w-100" alt="Desarrollo colaborativo" style="height: 420px; object-fit: cover;">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Anterior</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Siguiente</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Dashboard para Usuarios Autenticados -->
@if (User.Identity!.IsAuthenticated)
{
    var rol = User.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).SingleOrDefault();
    var nombre = User.Claims.Where(c => c.Type == ClaimTypes.Name).Select(c => c.Value).SingleOrDefault();

    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="text-center mb-5">
                    <h2 style="color: #2d3748; font-weight: 600; margin-bottom: 2rem;">¡Bienvenido de vuelta, @nombre!</h2>

                    <div class="alert mb-5 p-4 shadow-sm border-0" style="background-color: #f7fafc; color: #2d3748; border-left: 4px solid #4299e1; border-radius: 12px;">
                        <h5 class="alert-heading fw-semibold mb-3" style="font-size: 1.2rem;">
                            @(rol == "Admin" ? "🛡️ Eres Administrador" :
                                rol == "Cliente" ? "👑 Eres Cliente" :
                                "💼 Eres Consultor")
                        </h5>
                        <p class="mb-0" style="color: #718096; line-height: 1.6;">
                            @(rol == "Admin"
                                ? "Tienes control total sobre el sistema: usuarios, proyectos, postulaciones y mensajes."
                                : rol == "Cliente"
                                ? "Puedes publicar proyectos y gestionar postulaciones."
                                : "Puedes postularte a proyectos y ver tus aplicaciones.")
                        </p>
                    </div>

                    <!-- 🔘 BOTONES SEGÚN ROL -->
                    <div class="d-flex justify-content-center flex-wrap gap-4 mt-4">

                        @* --- ADMIN --- *@
                        @if (rol == "Admin")
                        {
                            <a asp-controller="Proyectos" asp-action="Index" class="btn btn-lg px-5 py-3 shadow-sm fw-semibold"
                               style="background: linear-gradient(135deg, #4299e1, #3182ce); color: white; border: none; border-radius: 10px;">
                                📋 Ver Proyectos
                            </a>
                            <a asp-controller="Postulaciones" asp-action="Index" class="btn btn-lg px-5 py-3 shadow-sm fw-semibold"
                               style="background: linear-gradient(135deg, #48bb78, #38a169); color: white; border: none; border-radius: 10px;">
                                🧾 Ver Postulaciones
                            </a>
                            <a asp-controller="Usuarios" asp-action="Index" class="btn btn-lg px-5 py-3 shadow-sm fw-semibold"
                               style="background: linear-gradient(135deg, #ed8936, #dd6b20); color: white; border: none; border-radius: 10px;">
                                💬 Mensajes
                            </a>
                        }

                        @* --- CLIENTE --- *@
                        else if (rol == "Cliente")
                        {
                            <a asp-controller="Proyectos" asp-action="Index" class="btn btn-lg px-5 py-3 shadow-sm fw-semibold"
                               style="background: linear-gradient(135deg, #4299e1, #3182ce); color: white; border: none; border-radius: 10px;">
                                📋 Mis Proyectos
                            </a>
                            <a asp-controller="Proyectos" asp-action="Create" class="btn btn-lg px-5 py-3 shadow-sm fw-semibold"
                               style="background-color: transparent; color: #4299e1; border: 2px solid #4299e1; border-radius: 10px;">
                                ➕ Crear Proyecto
                            </a>
                            <a asp-controller="Usuarios" asp-action="Index" class="btn btn-lg px-5 py-3 shadow-sm fw-semibold"
                               style="background-color: transparent; color: #718096; border: 2px solid #e2e8f0; border-radius: 10px;">
                                💬 Chats
                            </a>
                        }

                        @* --- CONSULTOR --- *@
                        else if (rol == "Consultor")
                        {
                            <a asp-controller="Proyectos" asp-action="Index" class="btn btn-lg px-5 py-3 shadow-sm fw-semibold"
                               style="background: linear-gradient(135deg, #4299e1, #3182ce); color: white; border: none; border-radius: 10px;">
                                🚀 Ver Proyectos
                            </a>
                            <a asp-controller="Postulaciones" asp-action="Index" class="btn btn-lg px-5 py-3 shadow-sm fw-semibold"
                               style="background-color: transparent; color: #4299e1; border: 2px solid #4299e1; border-radius: 10px;">
                                📋 Mis Postulaciones
                            </a>
                            <a asp-controller="Usuarios" asp-action="Index" class="btn btn-lg px-5 py-3 shadow-sm fw-semibold"
                               style="background-color: transparent; color: #718096; border: 2px solid #e2e8f0; border-radius: 10px;">
                                💬 Mensajes
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Sección de Información -->
<div class="container mb-5">
    <div class="row g-5">
        <!-- Misión -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center p-5">
                    <div class="icon-container mb-4" style="width: 80px; height: 80px; background: linear-gradient(135deg, #4299e1, #3182ce); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                        <span style="font-size: 2rem; color: white;">🎯</span>
                    </div>
                    <h4 style="color: #2d3748; margin-bottom: 1.5rem; font-weight: 600;">Misión</h4>
                    <p style="color: #718096; line-height: 1.7;">
                        Conectar a los mejores freelancers con empresas que buscan talento de calidad,
                        facilitando colaboraciones exitosas mediante una plataforma intuitiva y segura.
                    </p>
                </div>
            </div>
        </div>

        <!-- Visión -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center p-5">
                    <div class="icon-container mb-4" style="width: 80px; height: 80px; background: linear-gradient(135deg, #48bb78, #38a169); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                        <span style="font-size: 2rem; color: white;">🌅</span>
                    </div>
                    <h4 style="color: #2d3748; margin-bottom: 1.5rem; font-weight: 600;">Visión</h4>
                    <p style="color: #718096; line-height: 1.7;">
                        Ser la plataforma líder global en la conexión de talento freelance especializado
                        con oportunidades de negocio transformadoras.
                    </p>
                </div>
            </div>
        </div>

        <!-- Objetivos -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center p-5">
                    <div class="icon-container mb-4" style="width: 80px; height: 80px; background: linear-gradient(135deg, #ed8936, #dd6b20); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                        <span style="font-size: 2rem; color: white;">🚀</span>
                    </div>
                    <h4 style="color: #2d3748; margin-bottom: 1.5rem; font-weight: 600;">Objetivos</h4>
                    <p style="color: #718096; line-height: 1.7;">
                        • Garantizar calidad en cada proyecto<br>
                        • Fomentar relaciones a largo plazo<br>
                        • Innovar constantemente la plataforma<br>
                        • Expandir nuestra comunidad global
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 16px;
    }

        .hover-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.08) !important;
        }

    .btn {
        transition: all 0.3s ease;
        font-family: 'Inter', sans-serif;
    }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.12);
        }

    .hero-section {
        font-family: 'Inter', 'Segoe UI', sans-serif;
    }

    .card {
        border-radius: 16px;
    }

    .alert {
        border-radius: 12px;
    }
</style>